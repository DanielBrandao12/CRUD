<!DOCTYPE html>
<html>
  <head>
    <title>CRUD</title>
    <link rel='stylesheet' href='stylesheets/style.css' />
  </head>
  <body>
    <h1>CRUD</h1>
    <form action="" method="post">
      <div>
        <input type="text" name="nome" placeholder="Nome" id="name">
        <input type="text" name="sobrenome" placeholder="Sobrenone" id="last-name">
        <input type="email" name="email" placeholder="E-mail" id="email">  

        <button>Adicionar</button>    
      </div>
    </form>
    <form action="">
      
      <%for(let user of users){%>
        <div>
          <input type="text" name="nome" value="<%=user.nome%>">
          <input type="text" name="sobrenome" value="<%=user.sobrenome%>">
          <input type="text" name="email" value="<%=user.email%>">
          <button>Editar</button>
          <button>Excluir</button>
        </div>
          <%}%>
    </form>
  </body>
</html>
